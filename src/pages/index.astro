---
import { Image } from "astro:assets";

// Styles
import "../styles/input.css";

// Layout
import Layout from "../layouts/Layout.astro";

// Components
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Section from "../components/Section.astro";

// Images
import me from "../images/me.webp";
import bank from "../images/projects/bank.webp";
import calendarviews from "../images/projects/calendarviews.webp";
import expense from "../images/projects/expense.webp";
import hr from "../images/projects/hr.webp";
import nuxt3 from "../images/projects/nuxt3.webp";
import timeoff from "../images/projects/timeoff.webp";
import vuebase from "../images/projects/vuebase.webp";
// Icons
import javascriptIconImage from "../images/skillsIcons/javascript.png";
import typescriptIconImage from "../images/skillsIcons/typescript.png";
import pythonIconImage from "../images/skillsIcons/python.png";
import nodejsIconImage from "../images/skillsIcons/nodejs.png";
import vuejsIconImage from "../images/skillsIcons/vuejs.png";
import nuxtjsIconImage from "../images/skillsIcons/nuxtjs.png";
import tailwindcssIconImage from "../images/skillsIcons/tailwindcss.png";
import astroIconImage from "../images/skillsIcons/astro.png";
import htmlIconImage from "../images/skillsIcons/html.png";
import cssIconImage from "../images/skillsIcons/css.png";

// Data
const projects = [
  {
    title: "Expense Tracker",
    href: "https://guileless-jelly-8d3df3.netlify.app/daisyui",
    alt: "Expense Tracker",
    description:
      "Easily record transactions, set up budgets, add recurring expenses, and view insightful reports. Plus, this uses AI that can create transactions for you automatically!",
    src: expense,
    technologies: [
      "Vue.js",
      "TypeScript",
      "Tailwind CSS",
      "Chart.js",
      "Supabase",
    ],
  },
  {
    title: "HR App",
    href: "https://guileless-jelly-8d3df3.netlify.app/hr-management",
    alt: "HR App",
    description:
      "HR App that allows you join meetings, send messages, track employees, time attendance, and much more!",
    src: hr,
    technologies: [
      "Vue.js",
      "TypeScript",
      "Primevue",
      "Tailwind CSS",
      "Chart.js",
      "vue-i18n",
    ],
  },
  {
    title: "Timeoff Calendar",
    href: "https://timeoff-remaining-calc-app.netlify.app/",
    alt: "Timeoff Calendar",
    description: "Calendar app for planning timeoff / vacation days at work.",
    src: timeoff,
    technologies: ["Vue.js", "TypeScript", "Tailwind CSS"],
  },
  {
    title: "Banking App",
    href: "https://guileless-jelly-8d3df3.netlify.app/bank-dashboard",
    alt: "Banking App",
    description:
      "Mockup finance / bank app to track transactions, credit cards, bills, and saving goals.",
    src: bank,
    technologies: [
      "Vue.js",
      "TypeScript",
      "Primevue",
      "Tailwind CSS",
      "Chart.js",
    ],
  },
  {
    title: "Notes App (Nuxt Version)",
    href: "https://guileless-jelly-8d3df3.netlify.app/nuxt3",
    alt: "Notes App (Nuxt Version)",
    description: "Notes app to save notes and files.",
    src: nuxt3,
    technologies: [
      "Nuxt.js",
      "TypeScript",
      "Nuxt UI",
      "Tailwind CSS",
      "Firebase",
    ],
  },
  {
    title: "Notes App (Vue Version)",
    href: "https://guileless-jelly-8d3df3.netlify.app/vue-base",
    alt: "Notes App (Vue Version)",
    description: "Notes app to save notes and files.",
    src: vuebase,
    technologies: [
      "Vue.js",
      "TypeScript",
      "Daisy UI",
      "Tailwind CSS",
      "Firebase",
    ],
  },
  {
    title: "Tailwind CSS Calendar",
    href: "https://jade-marigold-4f5593.netlify.app/",
    alt: "Tailwind css calendar",
    description:
      "Tailwind css calendar that has daily, weekly, and month view. As well as events visible in each view.",
    src: calendarviews,
    technologies: ["Nuxt.js", "TypeScript", "Nuxt UI", "Tailwind CSS"],
  },
];

const badges = [
  {
    name: "JavaScript",
    className: "hover:bg-yellow-700/25 hover:border-yellow-700 hover:scale-105",
    src: javascriptIconImage,
  },
  {
    name: "TypeScript",
    className: "hover:bg-blue-700/25 hover:border-blue-700 hover:scale-105",
    src: typescriptIconImage,
  },
  {
    name: "Python",
    className: "hover:bg-sky-700/25 hover:border-sky-700 hover:scale-105",
    src: pythonIconImage,
  },
  {
    name: "Node.js",
    className:
      "hover:bg-emerald-700/25 hover:border-emerald-700 hover:scale-105",
    src: nodejsIconImage,
  },
  {
    name: "Vue.js",
    className: "hover:bg-green-700/25 hover:border-green-700 hover:scale-105",
    src: vuejsIconImage,
  },
  {
    name: "Nuxt.js",
    className: "hover:bg-green-700/25 hover:border-green-700 hover:scale-105",
    src: nuxtjsIconImage,
  },
  {
    name: "Tailwind CSS",
    className: "hover:bg-cyan-700/25 hover:border-cyan-700 hover:scale-105",
    src: tailwindcssIconImage,
  },
  {
    name: "Astro",
    className: "hover:bg-indigo-700/25 hover:border-indigo-700 hover:scale-105",
    src: astroIconImage,
  },
  {
    name: "HTML",
    className: "hover:bg-orange-700/25 hover:border-orange-700 hover:scale-105",
    src: htmlIconImage,
  },
  {
    name: "CSS",
    className: "hover:bg-blue-700/25 hover:border-blue-700 hover:scale-105",
    src: cssIconImage,
  },
];
---

<Layout
  title="mflavin portfolio"
  description="Full-stack developer with 5 years of experience specializing in building user-friendly interfaces and APIs"
>
  <Header />

  <main
    class="z-0 mx-auto flex w-full max-w-2xl flex-1 flex-col gap-16 px-6 pb-8 pt-28 md:px-0 md:pt-32"
  >
    <section class="flex flex-col-reverse md:flex-row md:justify-between">
      <div>
        <h2 class="my-8 text-2xl font-bold md:mb-6 md:mt-0">
          <span class="text-text">I am</span>
          <span class="text-primary">mflavin</span>
        </h2>
        <div>
          <p class="mb-4 max-w-sm text-text">
            Passionate and creative full-stack software engineer from Illinois
          </p>
        </div>

        <a
          title="More about me"
          class="btn btn-primary mt-2 w-full no-underline sm:w-40"
          aria-label="More about me"
          type="button"
          target="_blank"
          rel="noopener noreferrer"
          href="https://github.com/mflavin"
        >
          <svg
            viewBox="0 0 24 24"
            role="presentation"
            class="btn-svg"
            aria-hidden="true"
          >
            <path
              class="fill-current"
              d="M12 2C6.3 2 1.8 6.6 1.8 12.2c0 4.5 2.9 8.4 7 9.7.5.1.7-.2.7-.5v-1.7c-2.9.7-3.5-1.3-3.5-1.3-.5-1.2-1.1-1.5-1.1-1.5-.9-.6.1-.6.1-.6 1 .1 1.6 1.1 1.6 1.1.9 1.6 2.4 1.1 3 .9.1-.7.4-1.1.6-1.4-2.3-.3-4.7-1.1-4.7-5 0-1.1.4-2 1.1-2.8-.2-.4-.5-1.5 0-2.8 0 0 .9-.3 2.8 1 .8-.2 1.7-.3 2.6-.3s1.8.1 2.6.3c2-1.3 2.8-1 2.8-1 .6 1.4.2 2.4.1 2.7.7.7 1.1 1.6 1.1 2.8 0 3.9-2.4 4.8-4.7 5 .4.3.7.9.7 1.9v2.8c0 .3.2.6.7.5 4.1-1.4 7-5.2 7-9.7C22.2 6.6 17.7 2 12 2z"
            ></path>
          </svg>
          <span>More about me</span>
        </a>
      </div>

      <Image
        alt="mflavin"
        loading="eager"
        fetchpriority="high"
        width="160"
        height="160"
        class="aspect-square h-fit max-w-28 rounded-full object-cover object-center sm:float-right sm:max-w-36 md:max-w-40"
        src={me}
      />
    </section>

    <Section title="Skills">
      <ul class="flex flex-wrap gap-2">
        {
          badges.map((badge) => (
            <li
              tabindex="0"
              class:list={[
                "flex min-h-9 transform cursor-default items-center gap-2 rounded-md border border-outline px-3 py-1.5 text-sm font-medium text-text outline-none transition focus:outline-none focus:ring-2 focus:ring-primary",
                [badge.className],
              ]}
            >
              <Image
                alt="Badge for skill"
                loading="eager"
                width="24"
                height="24"
                class="aspect-square object-contain object-center"
                src={badge.src}
              />
              <button tabindex="-1" class="cursor-default">
                {badge.name}
              </button>
            </li>
          ))
        }
      </ul>
    </Section>

    <Section title="Projects">
      <ul class="space-y-6">
        {
          projects.map((project) => (
            <li>
              <ProjectCard
                title={project.title}
                href={project.href}
                alt={project.alt}
                description={project.description}
                src={project.src}
                technologies={project.technologies}
              />
            </li>
          ))
        }
      </ul>
    </Section>
  </main>

  <Footer />
</Layout>

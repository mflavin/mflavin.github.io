---
import { Image } from "astro:assets";

interface Props {
  title: string;
  href: string;
  alt: string;
  description: string;
  src: ImageMetadata;
  className: string;
}

const { title, href, alt, description, src, className } = Astro.props;
---

<a
  class:list={[
    "group -mx-3 flex flex-row items-center gap-2 rounded-md p-2.5 md:gap-3.5 lg:items-start lg:gap-3 lg:p-3",
    ["hover:" + className],
  ]}
  title={title}
  target="_blank"
  rel="noopener noreferrer"
  href={href}
>
  <Image
    alt={alt}
    width="56"
    height="56"
    class:list={[
      "aspect-square rounded-md object-contain object-center p-1.5 transition-transform duration-300 group-hover:scale-105 group-hover:transform group-hover:bg-transparent",
      [className],
    ]}
    src={src}
  />
  <div class="flex flex-col gap-0.5">
    <div class="flex flex-row items-stretch gap-3">
      <p class="line-clamp-2 font-medium text-primary dark:text-primary-dark">
        {title}
      </p>
    </div>
    <p class="line-clamp-2 text-sm text-secondary dark:text-secondary-dark">
      {description}
    </p>
  </div>
</a>

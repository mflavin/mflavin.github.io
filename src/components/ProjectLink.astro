---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  href: string;
  alt: string;
  description: string;
  src: ImageMetadata;
  className: string;
}

const { title, href, alt, description, src, className } = Astro.props;
---

<a
  class:list={[
    'p-2.5 lg:p-3 rounded-md -mx-3 flex flex-row items-center gap-2 lg:gap-3 lg:items-start md:gap-3.5 group',
    ['hover:' + className],
  ]}
  title={title}
  target='_blank'
  rel='noopener noreferrer'
  href={href}
>
  <Image
    alt={alt}
    width='56'
    height='56'
    class:list={[
      'object-center p-1.5 aspect-square object-contain rounded-md group-hover:bg-transparent group-hover:transform group-hover:scale-105 transition-transform duration-300',
      [className],
    ]}
    src={src}
  />
  <div class='flex flex-col gap-0.5'>
    <div class='flex flex-row gap-3 items-stretch'>
      <p class='font-medium text-primary dark:text-primary-dark line-clamp-2'>
        {title}
      </p>
    </div>
    <p class='line-clamp-2 text-secondary dark:text-secondary-dark text-sm'>
      {description}
    </p>
  </div>
</a>
